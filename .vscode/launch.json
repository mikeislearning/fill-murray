{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "cwd": "${workspaceFolder}",
      "name": "Launch Android",
      "platform": "android",
      "request": "launch",
      "sourceMaps": true,
      "type": "reactnative"
    },
    {
      "cwd": "${workspaceFolder}",
      "name": "Launch iOS",
      "platform": "ios",
      "request": "launch",
      "sourceMaps": true,
      "type": "reactnative"
    },
    {
      "name": "Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/.bin/jest",
        "--runInBand",
        "--testPathPattern",
        ".test.tsx?"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    }
  ]
}
